ARG									\
	digest="@sha256:a15790640a6690aa1730c38cf0a440e2aa44aaca9b0e8931a9f2b0d7cc90fd65"
ARG									\
	image="alpine"
ARG									\
	tag="3.12.0"
#########################################################################
FROM									\
	${image}:${tag}${digest}					\
		AS production
#########################################################################
ARG									\
	dir=/app
ARG									\
	src=/src
#########################################################################
WORKDIR								\
	${dir}
#########################################################################
COPY									\
	${src} .
#########################################################################
RUN									\
  apk add --upgrade php						\
									;
#########################################################################
ENTRYPOINT								\
	["php"]
#########################################################################
CMD									\
	["-f","index.php","-S","0.0.0.0:8080"]
#########################################################################
